---
import Layout from '~/layouts/PageLayout.astro';
import ProjectHeader from '~/components/ProjectComponents/ProjectHeader.astro';
import ProjectQuickFacts from '~/components/ProjectComponents/ProjectQuickFacts.astro';
import TextAndImage from '~/components/ProjectComponents/TextAndImage.astro';

const metadata = {
  title: 'AR Business Card Case Study',
  description: 'Detailed case study of my Augmented Reality Business Card project, showcasing the development process, technical challenges, and immersive solutions implemented.',
};

// Project details - In a real setup, this would likely come from a CMS or data file
const project = {
  title: 'Augmented Reality Business Card',
  client: 'Personal Project',
  duration: '2 months',
  role: 'Lead Developer',
  technologies: ['A-Frame', 'Astro', 'JavaScript', 'Three.js', 'AR.js'],
  liveUrl: 'https://ar-business-card.com',
  githubUrl: 'https://github.com/username/ar-business-card',
  overview: 'An interactive augmented reality business card that transforms a traditional paper card into a 3D immersive experience, showcasing my portfolio, skills, and contact information in an engaging spatial interface.',
  challenges: [
    {
      title: '3D Environment Complexity',
      description: 'Translating traditional flat UI concepts into an intuitive three-dimensional space that feels natural and easy to navigate for users.',
    },
    {
      title: 'AR User Experience',
      description: 'Creating an accessible experience for users unfamiliar with augmented reality interactions while maintaining engaging functionality.',
    },
    {
      title: 'Performance Optimization',
      description: 'Ensuring smooth performance across different mobile devices with varying processing capabilities while maintaining high-quality 3D assets.',
    },
  ],
  solutions: [
    'Leveraged A-Frame\'s entity-component system for modular 3D elements and interactions',
    'Implemented Astro\'s component architecture to optimize AR content delivery and reduce JavaScript payload',
    'Created intuitive visual cues and progressive disclosure of features to help users navigate 3D space',
    'Designed fallback experiences for devices with limited AR capabilities',
  ],
  results: [
    'Seamless integration between physical business card and digital AR experience',
    'Cross-device compatibility with 90% of modern smartphones',
    'Positive user feedback with 80% completion rate of the AR experience',
    'Featured in web development and AR technology showcases',
  ],
};
---

<Layout metadata={metadata}>
    <section class="px-4 pt-16 pb-4 mb-4 border-b border-terminal-300/20 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-screen-2xl">
        <ProjectHeader 
            title={project.title}
            technologies={project.technologies}
            client={project.client}
            duration={project.duration}
            role={project.role}
            liveUrl={project.liveUrl}
            githubUrl={project.githubUrl}
        />

        
    </section>
    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-screen-2xl">
    {/* Project Overview with Key Features */}
    <TextAndImage
      headline="Project Overview"
      bodyText={project.overview}
      imageSrc="https://images.unsplash.com/photo-1562408590-e32931084e23?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      imageAlt="AR Business Card being scanned by a smartphone showing 3D elements"
      flexDirection="text-first"
    />

    {/* Technical Architecture */}
    <TextAndImage
      headline="Technical Architecture"
      bodyText="The application was built on two primary technologies: A-Frame for handling the VR/AR functionality and Astro as the framework for the overall project architecture. A-Frame provided the entity-component system needed for creating interactive 3D elements, while Astro's partial hydration approach was perfect for delivering the AR experience with minimal JavaScript overhead. This combination allowed for efficient content delivery, with heavy 3D assets loaded only when needed during the AR experience."
      imageSrc="https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      imageAlt="Technical diagram showing A-Frame and Astro integration for AR functionality"
      flexDirection="image-first"
    />

    {/* User Experience & Impact */}
    <TextAndImage
      headline="User Experience & AR Interactions"
      bodyText={`Working in augmented reality presented unique UX challenges compared to traditional web development. Many users were encountering AR for the first time, requiring an intuitive approach to spatial interactions. Key results included:
      <ul class="customList my-4">
        <li>${project.results[0]}</li>
        <li>${project.results[1]}</li>
        <li>${project.results[2]}</li>
        <li>${project.results[3]}</li>
      </ul>
      
      I implemented progressive onboarding that guided users through their first AR experience, with visual cues that helped establish spatial awareness in the 3D environment.`}
      imageSrc="https://images.unsplash.com/photo-1550745165-9bc0b252726f?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      imageAlt="User interacting with AR business card elements floating in 3D space"
      flexDirection="text-first"
    />

    {/* Challenges & Solutions */}
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-6 text-terminal-500 text-glow-subtle">Challenges & Solutions</h2>
      <div class="space-y-6">
        {project.challenges.map((challenge) => (
          <div class="p-6 bg-terminal-bg-secondary rounded-lg border border-terminal-300/20">
            <h3 class="font-bold mb-2 text-terminal-500">{challenge.title}</h3>
            <p class="text-terminal-400">{challenge.description}</p>
          </div>
        ))}
      </div>
    </div>

    {/* Technical Solutions */}
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4 text-terminal-500 text-glow-subtle">Technical Solutions</h2>
      <ul class="customList space-y-2">
        {project.solutions.map((solution) => (
          <li>{solution}</li>
        ))}
      </ul>
    </div>

    {/* Results */}
    <div class="mb-12">
      <h2 class="text-2xl font-bold mb-4 text-terminal-500 text-glow-subtle">Results & Impact</h2>
      <ul class="customList space-y-2">
        {project.results.map((result) => (
          <li>{result}</li>
        ))}
      </ul>
    </div>
  </section>
</Layout> 