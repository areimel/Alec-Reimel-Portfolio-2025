---
import Layout from '@layouts/Layout.astro';
import LoadingScreen from '@components/LoadingScreenV1.astro';
/* import Header from '@components/widgets/Header.astro'; */
import Footer from '@components/Footer.astro';
/* import Announcement from '@components/widgets/Announcement.astro';
import ThemeSwitcher from '@components/ThemeSwitcher.astro'; */
import SidebarNav from '@components/SidebarNavV2.astro';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
const baseWidth = '100px';
const openWidth = '250px';
---

<Layout metadata={metadata}>
<!--   <slot name="announcement">
    <Announcement />
  </slot> -->
  <div class="flex min-h-screen">
    <SidebarNav 
      class="h-screen fixed top-0 left-0 transition-width duration-300 ease-in-out"
      baseWidth={baseWidth}
      openWidth={openWidth}
      style={`width: ${baseWidth};`}
    />
    <main 
      class="ml-auto transition-width duration-300 ease-in-out"
      style={`width: calc(100% - ${baseWidth});`}
    >
      <slot />
    </main>
  </div>
  <!-- <slot name="header">
    <Header {...headerData} isSticky showToggleTheme />
  </slot> -->
  <slot name="footer">
    <Footer />
  </slot>
  <!-- <ThemeSwitcher /> -->

  <LoadingScreen />
</Layout>
